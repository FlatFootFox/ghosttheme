{{!< default}}
{{> header}}
<main class="main_fox" role="main">
    {{#post}}
        <article class="article_fox" role="article" itemscope itemtype="http://schema.org/Article">
        <header class="postheader_fox">
            <time class="date_fox" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
            <h1 class="posttitle_fox" itemprop="headline">{{title}}</h1>
        </header>
        <div class="postcontent_fox" itemprop="articleBody">
            {{content}}
        </div>
        {{#if tags}}
            <div class="posttags_fox">
                Tags: {{tags separator=" | "}}
            </div>
        {{/if}}
            <div class="sharepost_fox">
                <h4 class="share_fox">Share this post: &nbsp;</h4>
                <a class="share_fox icon-twitter" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"><span class="hidethis_fox">Twitter</span></a>
                <a class="share_fox icon-facebook" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}"><span class="hidethis_fox">Facebook</span></a>
                <a class="share_fox icon-gplus" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><span class="hidethis_fox">Google+</span></a>
            </div>
                {{#if author}}
                    <footer class="postfooter_fox">
                        <address itemscope itemtype="http://schema.org/Person">
                        {{#if author.image}}
                            <div class="authorimage_fox"><img src="{{author.image}}" itemprop="image" /></div>
                        {{/if}}
                        <h4 class="authorname_fox"><span itemprop="author">{{author.name}}</span></h4>
                        {{#if author.website}}
                            <div class="authorwebsite_fox"><a href="{{author.website}}" itemprop="url">{{author.website}}</a></div>
                        {{/if}}
                        </address>
                        <div class="authorbio_fox">
                            <p>{{author.bio}}</p>
                        </div>
                    </footer>
                {{/if}}
        </article>
    {{/post}}
    {{#if pagination}}
        <div class="pagination_fox">
            {{{pagination}}}
        </div>
    {{/if}}
</main>
{{> footer}}